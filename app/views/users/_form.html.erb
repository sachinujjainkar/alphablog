<%= form_with(model: user, local: true,:html => {class: "form-horizontal", role: "form"}) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
      <div class="control-label col-sm-2">
          <%= form.label :username, "Username" %>
      </div>

      <div class="col-sm-8">
        <%= form.text_field :username, class: "form-control", placeholder: "Name", autofocus: true %>
      </div>
  </div>

   <div class="form-group">
      <div class="control-label col-sm-2">
          <%= form.label :firstname, "FirstName" %>
      </div>

      <div class="col-sm-8">
        <%= form.text_field :firstname, class: "form-control", placeholder: "firstname", autofocus: true %>
      </div>
  </div>

  <div class="form-group">
      <div class="control-label col-sm-2">
          <%= form.label :lastname, "lastname" %>
      </div>

      <div class="col-sm-8">
        <%= form.text_field :lastname, class: "form-control", placeholder: "lastname", autofocus: true %>
      </div>
  </div>

  <div class="form-group">
      <div class="control-label col-sm-2">
          <%= form.label :prn_number, "PRN Number" %>
      </div>

      <div class="col-sm-8">
        <%= form.text_field :prn_number, class: "form-control", placeholder: "PRN number", autofocus: true %>
      </div>
  </div>
  <div class="form-group">
      <div class="control-label col-sm-2">
          <%= form.label :email, "Email" %>
      </div>

      <div class="col-sm-8">
        <%= form.email_field :email, class: "form-control", placeholder: "Email", autofocus: true %>
      </div>
  </div>
  <div class="form-group">
      <div class="control-label col-sm-2">
          <%= form.label :password, "Password" %>
      </div>

      <div class="col-sm-8">
        <%= form.password_field :password, class: "form-control", placeholder: "password", autofocus: true %>
      </div>
  </div>
  <div class="form-group">
      <div class="control-label col-sm-2">
          <%= form.label :admin, "Admin" %>
      </div>

      <div class="col-sm-8">
        <%= form.check_box :admin, :value => false %>
      </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <%= form.submit "SignUp", class: "btn btn-primary btn-lg"%>
    </div>  
</div> 
<% end %>     