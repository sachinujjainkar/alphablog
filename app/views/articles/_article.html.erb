<div id="page-content">
  <h2 class="text-center mt-3" style="color: rgb(0,0,128);text-decoration-style: solid;">Articles</h2>
  <div class="container">
    <% @articles.each do |article| %>
      <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
          <div class="panel panel-success text-center shadow mb-5 bg-white rounded">
            <div class="panel-heading font-italic">
              <i class='fas fa-user'></i> <%= article.user.username if article.user %>
            </div>
            <div class="panel-body text-left">
              <h3><%= link_to article.title, article_path(article)%></h3>
              <p><%= article.description.html_safe %><h5 style="color: blue;">Click on VIEW to read more<h5></p>
              <div>
                <%= link_to "View", article_path(article), class: "btn btn-success" %>
                <% if logged_in? && current_user == article.user%>
                  <%= link_to "Edit", edit_article_path(article), class: "btn btn-info" %>
                  <%= link_to "Delete", article_path(article), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure?"} %>
                <% end %>
                <%= link_to "Comment", comments_path(article), class: "btn btn-info" %>
            </div>
            </div>
            <div class="panel-footer text-muted">
              <small><i class="fas fa-clock"></i> <%= time_ago_in_words(article.created_at) %> ago, 
                <i class='fas fa-edit'></i> <%= time_ago_in_words(article.updated_at) %> ago</small>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


