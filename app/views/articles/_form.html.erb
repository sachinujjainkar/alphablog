
<%= tinymce %>
<% if @article.errors.any?%>
    <h3>Following error preventing the article from getting created </h3>
    <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <li style="color: red;"> <%= msg%> </li>
        <% end %>
    </ul>
<% end %>
<%= form_with(model: @article, local: true,:html => {class: "form-horizontal", role: "form"}) do |form| %>
<div class="form-group">
      <div class="control-label col-sm-2">
          <%= form.label :title, "Title" %>
      </div>

      <div class="col-sm-8">
        <%= form.text_field :title, class: "form-control", placeholder: "Title", autofocus: true %>
      </div>
  </div>

   <div class="form-group">
      <div class="control-label col-sm-2">
          <%= form.label :description, "Description" %>
      </div>

      <div class="col-sm-8">
        <%= form.text_area :description, class: "form-control tinymce", placeholder: "Add description here", autofocus: true %>
      </div>
  </div>
  
    <div class="form-group">
          <div class="control-label col-sm-2">
              <%= form.label "Upload Image" %>
          </div>

          <div class="col-sm-8">
            <%= form.file_field :avatar, class: "form-control" %>
          </div>
    </div>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-2">
      <%= form.submit "Submit", class: "btn btn-primary btn-lg"%>
    </div>  
  </div>
<% end %>

<p>
  <%=link_to 'Back to Home',articles_path%> 
</p>